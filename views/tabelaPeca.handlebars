<a href="/adm"><button class="btn">Voltar para o Home</button></a><br>
<h1>Listar Peças</h1>

<!-- Formulário de Filtro -->
<form action="/" method="GET">
  <label for="equipamento_nome">Equipamento:</label>
  <select id="equipamento_nome" name="equipamento_nome" >
    <option value="">Tudo</option>
    {{#each equipamentos}}
    <option value="{{this.nome}}" {{#ifCond this.nome ../filtroEquipamento}}selected{{/ifCond}}>{{this.nome}}</option>
    {{/each}}
  </select><br>

  <label for="categoria">Categoria:</label>
  <select id="categoria" name="categoria" >
    <option value="">Tudo</option>
    <option value="Elétrica" {{#ifCond "Elétrica" categoria}}selected{{/ifCond}}>Elétrica</option>
    <option value="Mecânica" {{#ifCond "Mecânica" categoria}}selected{{/ifCond}}>Mecânica</option>
    <option value="Diversos" {{#ifCond "Diversos" categoria}}selected{{/ifCond}}>Diversos</option>
  </select><br>
  <label><input type="text" id="nome_peca" name="nome_peca" placeholder="Nome da Peça"></label><br><br>

  <button type="submit" class="btn">Filtrar</button><br>
</form>

<table>
  <thead>
    <tr>
      <th>Nome da Peça</th>
      <th>SAP</th>
      <th>Categoria</th>
      <th>Equipamento</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    {{#each Pecas}}
    <tr>
      <td>{{this.nome_peca}}</td>
      <td>{{this.SAP}}</td>
      <td>{{this.categoria}}</td>
      <td>{{this.equipamento_nome}}</td>
      <td><a href="/delPeca/{{this.id}}" onclick="return confirm('Tem certeza?')"><button class="btn">Deletar</button></a><br>
    </tr>
    {{/each}}
  </tbody>
</table>